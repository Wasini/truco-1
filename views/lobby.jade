            gameId:games[index].id,
            user:usuario,
        })
        window.alert(games[index].id);
    }*/
    
    $( document ).ready(function() {
        socket.emit('load games', {id: socket.id });
    });
    
    
    socket.on('load games successful',function (data) {
        updateGames(data.list)
    })
    
    
